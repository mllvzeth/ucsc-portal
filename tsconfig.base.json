{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/auth": ["libs/auth/src/index.ts"],
      "@/auth/*": ["libs/auth/src/*"],
      "@/ui": ["libs/ui/src/index.ts"],
      "@/ui/*": ["libs/ui/src/*"],
      "@/api": ["libs/api-client/src/index.ts"],
      "@/api/*": ["libs/api-client/src/*"]
    }
  }
}
