# SAML Configuration (Local Development with kristophjunge/test-saml-idp)
SAML_ENTRY_POINT=http://localhost:8080/simplesaml/saml2/idp/SSOService.php
SAML_ISSUER=http://localhost:3000
SAML_CALLBACK_URL=http://localhost:3000/api/auth/saml/callback
# Get IdP cert from: curl -s http://localhost:8080/simplesaml/saml2/idp/metadata.php
SAML_IDP_CERT=<certificate-from-idp-metadata>

# OAuth2/OIDC Configuration (Phase 2)
VITE_OAUTH_CLIENT_ID=your-client-id-here
VITE_OAUTH_AUTHORITY=https://auth.ucsc.edu
VITE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# API Gateway (Phase 2)
VITE_API_BASE_URL=http://localhost:3333

# Environment
VITE_ENV=development
NODE_ENV=development

# Feature Flags (Optional)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
